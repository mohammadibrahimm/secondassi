<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/healthyfood">


    <Button
        android:id="@+id/lunch1"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="451dp"
        android:text="Lunch" />

    <Button
        android:id="@+id/dinner1"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="404dp"
        android:text="Dinner"
        />

    <!--    breaker for the title and buttons-->

    <TextView
        android:id="@+id/diet"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/breakfast1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="92dp"
        android:background="@color/design_default_color_primary"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Diet"
        android:textSize="30sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/diet"/>

    <Button
        android:id="@+id/breakfast1"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="496dp"
        android:text="@string/breakfast" />


</RelativeLayout>